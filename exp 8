<body>
  <h2>ğŸ‘©â€ğŸ« Person, Student, and Teacher Example</h2>
  <pre id="output"></pre>

  <script>
    // Base class
    class Person {
      constructor(name, age) {
        this.name = name;
        this.age = age;
      }
      getInfo() {
        return `Name: ${this.name}, Age: ${this.age}`;
      }
    }

    // Student subclass
    class Student extends Person {
      constructor(name, age, course) {
        super(name, age);
        this.course = course;
      }
      getInfo() {
        return `${super.getInfo()}, Course: ${this.course}`;
      }
    }

    // Teacher subclass
    class Teacher extends Person {
      constructor(name, age, subject) {
        super(name, age);
        this.subject = subject;
      }
      getInfo() {
        return `${super.getInfo()}, Subject: ${this.subject}`;
      }
    }

    // Create instances
    const student = new Student("Alice", 20, "Computer Science");
    const teacher = new Teacher("Mr. Smith", 45, "Mathematics");

    // Display output
    const output = `${student.getInfo()}\n${teacher.getInfo()}`;
    document.getElementById("output").textContent = output;
    console.log(output);
  </script>
</body>
</html>
